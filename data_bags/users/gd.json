{
  "groups": [
    "gd",
    "sudo",
    "cdrom",
    "floppy",
    "plugdev",
    "sambashare",
    "sysadmin"
  ],
  "comment": "GD. Arends",
  "id": "gd",
  "uid": 1000,
  "shell": "\/bin\/bash",
  "files": {
    /*
      Files that live in users cookbook for the user. For example,
      dotfiles. Note that in order for Chef to find dot files, they
      can't start with a dot character. They have the following
      structure:
      ".file_under_$HOME": {
        "mode": "0644",
        "source": "dot_file"
      }
     */
    // Examples:
    ".gitconfig": {
      "mode": "0644",
      "source": "dot-gitconfig"
    }
  }
}
